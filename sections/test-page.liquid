{% endfor %}
{% else %}
{% for variant in product.variants %}
{% comment %} {{ variant.metafields.custom.color_hexcode }} {% endcomment %}
{% comment %} {% assign main_image = variant.featured_image | image_url: width: '1000', height: '1000' | append: ", " %}
{% assign thumbnails = variant.metafields.custom.img_src.value | join: ", " %}
{{ main_image | append: thumbnails }} {% endcomment %}
{% endfor %}
{% endif %}

<section class="md:x-py-[30px] md:x-pt-[90px]">
    <div
        class="x-flex x-flex-col md:x-flex-row md:x-px-[50px] md:x-gap-[50px] x-h-auto md:x-h-[540px] lg:x-h-full lg:x-max-w-[1440px] lg:x-mx-auto">
        <div class="md:x-w-1/2 lg:x-w-2/3">
            <div class="x-flex x-flex-col md:x-flex-row-reverse x-justify-end md:x-gap-[20px]">
                <div class="md:x-flex-1">
                    <div class="carousel-main x-p-[16px] x-pb-[10px] x-flex x-items-center x-w-full md:x-p-[0px] md:x-w-[100%] x-shadow-none" data-flickity='{ "fullscreen": true }'>

                        {% if product.has_only_default_variant %}
                            {% for url in product.images %}
                                <div class="carousel-cell" style="background-image: url({{ url | image_url: width: 1000 }}); background-size: cover; background-position: 50% 50%;">&nbsp;</div>
                            {% endfor %}
                        {% else %}
                            <div class="carousel-cell" style="background-image: url({{ product.selected_or_first_available_variant.featured_image | image_url: width: 1000 }}); background-size: cover; background-position: 50% 50%;">&nbsp;</div>
                            {% for image_url in product.selected_or_first_available_variant.metafields.custom.img_src.value %}
                                <div class="carousel-cell" style="background-image: url({{ image_url }}); background-size: cover; background-position: 50% 50%;">&nbsp;</div>
                            {% endfor %}
                        {% endif %}

                    </div>
                </div>
                <div
                    class="carousel-nav desktab x-hidden md:x-flex x-flex-col x-gap-[10px] md:x-gap-[20px] x-overflow-y-scroll x-px-[16px] md:x-p-[0px] no-scrollbar x-snap-y x-snap-mandatory md:x-h-[540px]">

                    {% if product.has_only_default_variant %}
                        {% for url in product.images %}
                            <div class="thumbnail">
                                <div class="image" style="background-image: url({{ url | image_url: width: 1000 }}); background-size: cover; background-position: 50% 50%;">&nbsp;</div>
                                <div class="highlight">&nbsp;</div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="thumbnail">
                            <div class="image" style="background-image: url({{ product.selected_or_first_available_variant.featured_image | image_url: width: 1000 }}); background-size: cover; background-position: 50% 50%;">&nbsp;</div>
                            <div class="highlight">&nbsp;</div>
                        </div>

                        {% for url in product.selected_or_first_available_variant.metafields.custom.img_src.value %}
                            <div class="thumbnail">
                                <div class="image" style="background-image: url({{ url }}); background-size: cover; background-position: 50% 50%;">&nbsp;</div>
                                <div class="highlight">&nbsp;</div>
                            </div>
                        {% endfor %}
                    {% endif %}

                </div>
            </div>

            <div class="md:x-hidden x-block">
                <div
                    class="carousel-nav mobile x-overflow-y-hidden x-flex x-flex-row x-gap-[10px] x-overflow-x-scroll x-px-[16px] no-scrollbar x-snap-x x-snap-mandatory x-scroll-pl-[16px]">

                    {% if product.has_only_default_variant %}
                        {% for url in product.images %}
                            <div class="thumbnail">
                                <div class="image"
                                    style="background-image: url({{ url | image_url: width: 1000 }}); background-size: cover; background-position: 50% 50%;">
                                    &nbsp;</div>
                                <div class="highlight">&nbsp;</div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="thumbnail">
                            <div class="image"
                                style="background-image: url({{ product.selected_or_first_available_variant.featured_image | image_url: width: 1000 }}); background-size: cover; background-position: 50% 50%;">
                                &nbsp;</div>
                            <div class="highlight">&nbsp;</div>
                        </div>

                        {% for url in product.selected_or_first_available_variant.metafields.custom.img_src.value %}
                            <div class="thumbnail">
                                <div class="image"
                                    style="background-image: url({{ url }}); background-size: cover; background-position: 50% 50%;">
                                    &nbsp;</div>
                                <div class="highlight">&nbsp;</div>
                            </div>
                        {% endfor %}
                    {% endif %}

                </div>
            </div>
        </div>

        <div
            class="x-px-[16px] x-py-[36px] md:x-p-[0px] md:x-flex md:x-justify-center md:x-items-start md:x-w-1/2 lg:x-w-1/3">
            <div class="x-flex x-flex-col x-gap-[32px] md:x-w-[420px] md:x-sticky md:x-top-[120px]">
                <div class="x-flex x-flex-col x-gap-[20px]">
                    <div class="x-flex x-flex-col x-gap-[6px]">
                        <div class="x-text-[24px] x-uppercase">{{ product.title }}</div>
                        <div>reviews</div>
                    </div>
                    <div class="x-flex x-flex-col x-gap-[6px]">
                        <div class="x-text-[20px]">{{ product.price | money }}</div>
                        <div class="x-text-[16px] x-uppercase">Lorem ipsum dolor</div>
                    </div>
                </div>
                <div>
                    <div class="x-text-[14px] x-leading-[20px]">{{ product.content }}</div>
                </div>
                <div>
                    <div class="x-text-[14px]">Lorem, ipsum dolor.</div>
                </div>
                <div class="x-flex x-flex-col x-gap-[20px]">

                    {% if product.has_only_default_variant == false %}
                        <div class="x-flex x-flex-row x-gap-[16px]">
                            {% for variant in product.variants %}
                                {% assign main_image = variant.featured_image | image_url: width: '1000', height: '1000' | append: ", " %}
                                {% assign thumbnails = variant.metafields.custom.img_src.value | join: ", " %}
                                <label>
                                    <input type="radio" name="square-color" class="swatch-input__hidden"
                                        data-available="{{ variant.available }}"
                                        data-thumbnails="{{ main_image | append: thumbnails }}" value="{{ variant.id }}" {% if
                                        product.selected_or_first_available_variant.id == variant.id %} checked {% endif %} />
                                    <div class="swatch-variant"
                                        style="background-color: {{ variant.metafields.custom.color_hexcode }}">&nbsp;</div>
                                </label>
                            {% endfor %}
                        </div>
                    {% endif %}

                    <div>
                        <div class="x-inline-block">
                            <div
                                class="quantity-picker x-flex x-border-[1px] x-border-gray-300 x-gap-[12px] x-items-center x-justify-between">
                                <button
                                    class="x-text-gray-500 x-text-[18px] x-flex x-items-center x-justify-center x-p-[16px]"
                                    id="decrease"><i class='bx bx-minus'></i></button>
                                <input type="text" disabled="true" id="quantity" value="1" readonly
                                    class="x-text-center x-w-[30px] x-bg-transparent x-border-none x-outline-none" />
                                <button
                                    class="x-text-gray-500 x-text-[18px] x-flex x-items-center x-justify-center x-p-[16px]"
                                    id="increase"><i class='bx bx-plus'></i></button>
                            </div>
                        </div>
                    </div>
                    <button
                        id="add-to-cart"
                        class="x-w-full x-h-[55px] x-uppercase x-text-[10px] x-text-center x-text-white x-bg-green-800 disabled:x-bg-green-950 x-transition-colors x-duration-300 x-ease-in-out">Add
                        to Cart</button>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        initializeFlickity();
        handleVariantSelection();
        setVariantIdInUrl();
        handleQuantity();
        handleAddToCart();
        setAvailability()
    });

    function handleAddToCart() {
        $('#add-to-cart').click(function () {
            let variantId = $('input[name="square-color"]:checked').val();
            let quantity = $('#quantity').val();

            $('#add-to-cart').html('<i class="bx bx-loader-alt bx-spin"></i>');
            $('#add-to-cart').attr('disabled', true);

            console.log(quantity);
            
            $.ajax({
                url: '/cart/add.js',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ 
                    id: variantId, 
                    quantity: quantity 
                }),
                success: function (success) {
                    console.log(success);
                    $('#add-to-cart').html('Added to Cart!');
                    reenableButton()
                },
                error: function (error) {
                    let response = JSON.parse(error.responseText);
                    console.log(response.status);

                    if (response.status == 422 && response.message.includes("You can't add more")) {
                        $('#add-to-cart').html('Exceeded Stock Limit');
                        reenableButton();
                        return;
                    }

                    $('#add-to-cart').html('An Error Occured. Try again later.');
                    reenableButton();
                }
            });
        });

        function reenableButton() {
            setTimeout(() => {
                $('#add-to-cart').html('Add to Cart');
                $('#add-to-cart').removeAttr('disabled');
                $('#quantity').val(1);
            }, 3000);
        }
    }

    function handleQuantity() {
        $('#increase').click(function () {
            let quantity = parseInt($('#quantity').val());
            $('#quantity').val(quantity + 1);
            $('#decrease').find('i').removeAttr('disabled');
        });

        $('#decrease').click(function () {
            let quantity = parseInt($('#quantity').val());
            if (quantity > 1) {
                $('#quantity').val(quantity - 1);
            }

            if (quantity == 2) {
                $('#decrease').find('i').attr('disabled', true);
            }
        });
    }

    function setVariantIdInUrl() {
        let variantId = $('input[name="square-color"]:checked').val();
        let url = new URL(window.location.href);
        let searchParams = new URLSearchParams(url.search);
        searchParams.set('variant', variantId);
        url.search = searchParams.toString();
        window.history.replaceState({}, '', url);
    }
     
    function setAvailability() {
        let available = $('input[name="square-color"]:checked').data('available');
        if (available == false) {
            $('#add-to-cart').attr('disabled', true);
            $('#add-to-cart').html('Out of Stock');
        } else {
            $('#add-to-cart').removeAttr('disabled');
            $('#add-to-cart').html('Add to Cart');
        }
    }

    function handleVariantSelection() {
        $('input[name="square-color"]').change(function () {
            let urls = $(this).data('thumbnails').split(', ');

            $('.carousel-main').flickity('remove', $('.carousel-cell'));
            $('.carousel-nav.desktab').empty();
            $('.carousel-nav.mobile').empty();

            urls.forEach(url => {
                try {
                    let $main = $('<div class="carousel-cell" style="background-image: url(' + url + '); background-size: cover; background-position: 50% 50%;">&nbsp;</div>');
                    $('.carousel-main').flickity('append', $main);
                    $('.carousel-nav.desktab').append(`<div class="thumbnail"><div class="image" style="background-image: url(${url}); background-size: cover; background-position: 50% 50%;">&nbsp;</div><div class="highlight">&nbsp;</div></div>`);
                    $('.carousel-nav.mobile').append(`<div class="thumbnail"><div class="image" style="background-image: url(${url}); background-size: cover; background-position: 50% 50%;">&nbsp;</div><div class="highlight">&nbsp;</div></div>`);
                } catch (error) {
                    console.log(error);
                }
            });

            $('.carousel-main').flickity('select', 0);
            initializeFlickity();
            setVariantIdInUrl();
            setAvailability()
        })
    }

    function initializeFlickity() {
        var $mainCarousel = $('.carousel-main').flickity({
            fullscreen: true,
        });

        $('.carousel-nav.desktab .thumbnail')[0].classList.add('is-nav-selected')
        $('.carousel-nav.mobile .thumbnail')[0].classList.add('is-nav-selected')

        $mainCarousel.on('change.flickity', function (event, index) {

            $('.carousel-nav.desktab .thumbnail').removeClass('is-nav-selected');
            $('.carousel-nav.mobile .thumbnail').removeClass('is-nav-selected');

            $('.carousel-nav.desktab .thumbnail')[index].classList.add('is-nav-selected');
            $('.carousel-nav.mobile .thumbnail')[index].classList.add('is-nav-selected');
        });

        $('.carousel-nav.desktab .thumbnail').on('click', function () {
            let index = $(this).index();
            $mainCarousel.flickity('select', index);
        });

        $('.carousel-nav.mobile .thumbnail').on('click', function () {
            let index = $(this).index();
            $mainCarousel.flickity('select', index);
        });
    }
</script>

